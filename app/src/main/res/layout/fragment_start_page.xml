<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.StartPageFragment"
    android:orientation="vertical">

    <Chronometer
        android:id="@+id/cm_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format="%s"
        android:textSize="20sp"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <Button
            android:id="@+id/bt_timing"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/timer_timing"/>


        <Button
            android:id="@+id/bt_count_down"
            android:layout_toEndOf="@id/bt_timing"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/timer_count_down"/>
    </RelativeLayout>

</RelativeLayout>