<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.ShareActivity">

    <RelativeLayout
        android:background="@drawable/share_card"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="436dp"
        android:elevation="10dp">

        <TextView
            android:id="@+id/tv_timer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="29dp"
            android:text="这是您的第 次记录时间"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_below="@id/tv_timer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="36dp"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="21sp"
            android:text="日期"/>
        <TextView
            android:id="@+id/tv_date_value"
            android:layout_below="@id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="36dp"
            android:text="2020年6月6日"
            android:textColor="#000000"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_below="@id/tv_date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:text="时间"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="21sp"/>
        <TextView
            android:id="@+id/tv_time_value"
            android:layout_below="@id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="36dp"
            android:text="1 分钟"
            android:textColor="#000000"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_type"
            android:layout_below="@id/tv_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:text="类型"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="21sp"/>
        <TextView
            android:id="@+id/tv_type_value"
            android:layout_below="@id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="36dp"
            android:text="- - "
            android:textColor="#000000"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="143dp"
            android:layout_height="143dp"
            android:layout_below="@id/tv_timer_count"
            android:layout_marginTop="87dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/clock"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="18dp"
            android:text="在世界上我们只活一次  所以应该爱惜光阴\n 必须过真实的生活  过有价值的生活\n—— 巴甫洛夫"
            android:textSize="10dp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</LinearLayout>