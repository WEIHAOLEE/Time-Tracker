<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize">





    <!--TODO: 写他妈的自定义控件 来实现圆形图片展示-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/profile_photo"/>


    <EditText
        android:id="@+id/et_id"
        android:layout_marginTop="40dp"
        android:layout_below="@id/iv_user_photo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/boarding_reservation_round"
        android:hint="UserName"
        android:gravity="center"
        android:inputType="text" />


    <EditText
        android:id="@+id/et_pwd"
        android:layout_marginTop="10dp"
        android:layout_below="@id/et_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Password"
        android:gravity="center"
        android:background="@drawable/boarding_reservation_round"
        android:inputType="numberPassword" />

    <EditText
        android:id="@+id/et_pwd_confirm"
        android:layout_marginTop="10dp"
        android:layout_below="@id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Confirm Password"
        android:gravity="center"
        android:background="@drawable/boarding_reservation_round"
        android:inputType="numberPassword" />

    <Button
        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_pwd_confirm"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/boarding_book_round"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>