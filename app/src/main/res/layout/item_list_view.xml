<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_main_view">

    <TextView
        android:id="@+id/item_tv_mission_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="任务名称xsadsddadadadasda"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/item_tv_mission_time"
        android:layout_below="@id/item_tv_mission_name"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 minuets"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/item_tv_mission_date"
        android:layout_below="@id/item_tv_mission_time"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020年04月14日"
        android:textSize="12sp"/>

</RelativeLayout>
